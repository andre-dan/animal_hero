<%- model_class = Ong -%>
<div class="navbar navbar-expand-lg">
  <ul class="form-inline">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_ong_path,
                :class => 'btn btn-primary' %>
  </h1>
  </ul>
</div>
  <div class="form-inline justify-center">
    <%= form_with url: search_pets_path, local: true, method: :get do |f| %>
      <%= f.text_field :q, class:"form-control mr-sm-2", type:"search", placeholder: 'Pesquisar ...' %>
      <%= f.submit 'Pesquisar', class:'btn btn-info' %>
    <% end %>
  </div>  
  
<% if @ongs.empty?%>
  <h3> Nenhuma ong cadastrada ou encontrada.</h3>
<% end %>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:nome) %></th>
    <th><%= model_class.human_attribute_name(:email) %></th>
    <th><%= model_class.human_attribute_name(:estado) %></th>
    <th><%= model_class.human_attribute_name(:logo) %></th>
     <th><%= model_class.human_attribute_name(:criado_por) %></th>
    <th style="width: 170px" ><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @ongs.each do |ongs| %>
    <tr>
      <td><%= ongs.nome %></td>
      <td><%= ongs.email %></td>
      <td><%= ongs.estado %></td>
      <td><%= ongs.logo %></td>
       <td><%= ongs.user.name %></td>

      <td>
        <%= link_to content_tag(:i,'Mostrar'),
                    ong_path(ongs), :class => 'btn btn-success btn-xs' %>
        <%= link_to content_tag(:i,'Editar', class: ["fas", "fa-edit"]),
                    edit_ong_path(ongs), :class => 'btn btn-primary btn-xs' %>
        <%= link_to content_tag(:i,'Excluir', class: ["fas", "fa-trash"]),
                    ong_path(ongs),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-xs btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>